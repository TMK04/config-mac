[alias]
	aconflict = "!git add . && git conflict"
	ad = "!git add . && git status -s"
	addd = "!git ad"
	can = commit --amend --no-edit
	cm = commit
	cma = commit --amend
	cminit = commit -m \"Initial commit\"
	cmm = commit -m
	conflict = "!git diff --check --staged | grep conflict | more"
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	cps = cherry-pick --skip
	dif = diff
	difs = diff --staged
	l = log --oneline --decorate --graph
	ll = log
	pushb = !git push -u origin "$(git branch --show-current)"
	pushf = push --force-with-lease
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbcn = -c core.editor=true rebase --continue
	rbe = rebase --edit-todo
	rbi = rebase -i
	rbs = rebase --skip
	r = reset
	rd = reset .
	root = rev-parse --show-toplevel
	s = stash
	sa = stash apply
	save = "!git stash store -m \"save: $1\" "$(git stash create)" #"
	sl = stash list
	sp = stash pop
	st = status -s
	tagcm = rev-list -n 1
	wt = worktree
	wtl = worktree list
	wtroot = "!git wtl --porcelain | rg '^worktree .*/.bare$' | head -n 1 | sed 's:^worktree ::; s:/.bare$::'"
[core]
	editor = code --wait
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main

[commit]
	gpgsign = true
[gpg]
	format = ssh
[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[credential]
	helper = 1password
[includeIf "gitdir:~/.vscode/extensions/"]
	path = ~/Projects/tmk04/.gitconfig
[includeIf "gitdir:~/Projects/tmk04/"]
	path = ~/Projects/tmk04/.gitconfig
[includeIf "gitdir:~/Projects/klaytn/"]
	path = ~/Projects/klaytn/.gitconfig
[fetch]
	writeCommitGraph = true
